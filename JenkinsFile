// Run on an agent where we want to use Go
node {
    // Ensure the desired Go version is installed
    def root = "/usr/local/go/bin/go"

 
        stage 'Checkout'
        git branch: "main", url: 'https://github.com/farhanramzy/simple-golang-jenkins.git'

        stage 'preTest'
        sh '${root} version'

        stage 'Test'
        sh '${root} test ./... -cover'

        stage 'Build'
        sh '${root} build ./...*'

        stage 'Deploy'

    
}