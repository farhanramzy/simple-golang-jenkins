// Run on an agent where we want to use Go
node {
    // Ensure the desired Go version is installed
    def root = "/usr/local/go/bin/go"

 
        stage 'Checkout'
        git url: 'https://github.com/farhanramzy/simple-golang-jenkins.git'

        stage 'preTest'
        sh 'go version'

        stage 'Test'
        sh 'go test cover'

        stage 'build'
        sh 'go build .'

        stage 'Deploy'

    
}